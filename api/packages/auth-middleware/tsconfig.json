{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,

    // ‚Üê add these two:
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // optional, to skip errors in node_modules
    "skipLibCheck": true
  },
  "include": ["src"]
}
